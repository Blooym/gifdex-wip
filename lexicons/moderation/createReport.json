{
  "lexicon": 1,
  "id": "net.gifdex.moderation.createReport",
  "defs": {
    "main": {
      "type": "procedure",
      "input": {
        "encoding": "application/json",
        "required": ["subject", "reasonCategory", "reason"],
        "schema": {
          "type": "object",
          "properties": {
            "subject": {
              "type": "string",
              "format": "at-uri"
            },
            "reasonCategory": {
              "type": "string",
              "enum": ["sexual", "spam", "hate", "other"]
            },
            "reason": {
              "type": "string",
              "maxGraphemes": 2000
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [],
          "properties": {}
        }
      },
      "errors": [
        {
          "name": "AuthenticationRequired",
          "description": "The caller is not authenticated."
        },
        {
          "name": "SubjectNotFound",
          "description": "The resolved subject does not exist or has not been indexed yet."
        }
      ]
    }
  }
}
